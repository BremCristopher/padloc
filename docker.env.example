# =============================================================================
# Padloc Server Configuration for Docker Environment
# =============================================================================

# Server Configuration
PL_SERVER_CLIENT_URL=https://your-padloc-frontend.com
PL_SERVER_REPORT_ERRORS=admin@yourdomain.com
PL_SERVER_VERIFY_EMAIL_ON_SIGNUP=true

# Data Storage - Using PostgreSQL
PL_DATA_BACKEND=postgres
PL_DATA_POSTGRES_HOST=postgres
PL_DATA_POSTGRES_PORT=5432
PL_DATA_POSTGRES_DATABASE=padloc
PL_DATA_POSTGRES_USER=padloc
PL_DATA_POSTGRES_PASSWORD=your-secure-password

# Email Configuration
# Option 1: SMTP (for production)
PL_EMAIL_BACKEND=smtp
PL_EMAIL_SMTP_HOST=smtp.gmail.com
PL_EMAIL_SMTP_PORT=587
PL_EMAIL_SMTP_SECURE=true
PL_EMAIL_SMTP_USER=your-email@gmail.com
PL_EMAIL_SMTP_PASSWORD=your-app-password
PL_EMAIL_SMTP_FROM=noreply@yourdomain.com

# Option 2: Console (for testing - prints emails to console)
# PL_EMAIL_BACKEND=console

# Authentication Types
PL_AUTH_TYPES=email,totp

# Disable GeoIP if in restricted network environment
PL_DISABLE_GEOIP=true

# Logging
PL_LOGGING_BACKEND=postgres
PL_LOGGING_POSTGRES_HOST=postgres
PL_LOGGING_POSTGRES_PORT=5432
PL_LOGGING_POSTGRES_DATABASE=padloc
PL_LOGGING_POSTGRES_USER=padloc
PL_LOGGING_POSTGRES_PASSWORD=your-secure-password

# Attachments Storage
PL_ATTACHMENTS_BACKEND=fs
PL_ATTACHMENTS_FS_DIR=/data/attachments

# Transport
PL_TRANSPORT_HTTP_PORT=3000
PL_TRANSPORT_HTTP_ALLOW_ORIGIN=*
